<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/white" >

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@color/white"
	    android:orientation="vertical" >
		
		    <LinearLayout
		        android:id="@+id/layInfoLastReading"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/white"
		        android:orientation="vertical"
		        android:padding="5dp" >
		        
		        <TextView
		            android:id="@+id/lblLastReading"
		            style="@style/h2"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="Ultima lectura"
		            android:textAppearance="?android:attr/textAppearanceMedium"
		            android:textColor="@color/black" />
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/lblLastDate"
		                style="@style/labelInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingRight="10dp"
		                android:text="Fecha:" />
		
		            <TextView
		                android:id="@+id/txtLastDate"
		                style="@style/textInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="15/01/2012" />
		
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		
		            <TextView
		                android:id="@+id/lblLastValue"
		                style="@style/labelInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingRight="10dp"
		                android:text="Valor:" />
		
		            <TextView
		                android:id="@+id/txtLastValue"
		                style="@style/textInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:inputType="number"
		                android:text="2535"
		                android:textStyle="italic" />
		
		            <TextView
		                android:id="@+id/txtm3"
		                style="@style/textInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=" m3" />
		
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		
		            <TextView
		                android:id="@+id/lblAverage"
		                style="@style/labelInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingRight="10dp"
		                android:text="Media:" />
		
		            <TextView
		                android:id="@+id/txtAverage"
		                style="@style/textInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:inputType="numberDecimal"
		                android:text="16.50" />
		
		            <TextView
		                android:id="@+id/TextView01"
		                style="@style/textInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text=" m3/dia" />
		
		        </LinearLayout>
		
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/layLocalization"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/white"
		        android:orientation="vertical"
		        android:padding="5dp" >
		
		        <TextView
		            android:id="@+id/lblLocalization"
		            style="@style/h2"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="Localización"
		            android:textAppearance="?android:attr/textAppearanceMedium"
		            android:textColor="@color/black" />
		
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:orientation="horizontal" >
		
		            <TextView
		                android:id="@+id/lblDateLocalization"
		                style="@style/labelInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingRight="10dp"
		                android:text="Fecha:" />
		
		            <TextView
		                android:id="@+id/txtDateLocalization"
		                style="@style/textInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="19/11/2012"
		                android:textStyle="italic" />
		
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		
		            <TextView
		                android:id="@+id/lblLatitude"
		                style="@style/labelInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingRight="10dp"
		                android:text="Latitud:" />
		
		            <TextView
		                android:id="@+id/txtLatitude"
		                style="@style/textInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="0.05456"
		                android:textStyle="italic" />
		
		        </LinearLayout>
		
		        <LinearLayout
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		
		            <TextView
		                android:id="@+id/lblLongitude"
		                style="@style/labelInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:paddingRight="10dp"
		                android:text="Longitud:" />
		
		            <TextView
		                android:id="@+id/txtLongitude"
		                style="@style/textInput"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:text="39.46545" />
		
		        </LinearLayout>
		
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/layComment"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:padding="5dp" >
		
		        <TextView
		            android:id="@+id/txtComment"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content" />
		
		    </LinearLayout>
		
		    <LinearLayout
		        android:id="@+id/layInfoActualReading"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:background="@color/white"
		        android:gravity="center"
		        android:orientation="vertical"
		        android:padding="5dp" >
		
		        <TextView
		            android:id="@+id/txtActualReading"
		            style="@style/h2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:text="Lectura actual" />
		
		        <EditText
		            android:id="@+id/new_reading_value"
		            android:layout_width="190dp"
		            android:layout_height="40dp"
		            android:background="@drawable/backround"
		            android:gravity="center_vertical|center_horizontal"
		            android:hint="Introduzca valor ..."
		            android:inputType="number"
		            android:padding="5dp"
		            android:textColor="@color/black" />
		
		
		    <com.androidplot.xy.XYPlot
		        android:id="@+id/mySimpleXYPlot"
		        android:layout_width="fill_parent"
		        android:layout_height="150dp"
		        android:layout_marginLeft="10dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginTop="10dp"
		        title="Gráfica de consumo" />

		</LinearLayout>
	</LinearLayout>
</ScrollView>

